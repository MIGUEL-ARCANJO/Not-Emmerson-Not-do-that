<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/txtSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salário fixo"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total de vendas"
        android:inputType="number" />
    <EditText
        android:id="@+id/txtTaxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Taxa de comissão (%)"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <TextView
        android:id="@+id/lblValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Valor total: R$ 0,00"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>